<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
    <title>Blog Details</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
        <h1><%=blog.title%></h1>
        <img src= <%= blog.coverImageUrl %> width="500px">
        <p><%=blog.body%></p>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="100px"> <%= blog.createdBy.fullName %>    
    </div>

    <div class="container mt-3">
        <h1>Comments <%= comments.length %> </h1>

        <% if(locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" id="content" name="content" placeholder="Enter your comment">
                    <button class="btn btn-primary btn-sm" type="submit">Add</button>
                </div>
            </form>
        <% } %>
    </div>

    <div class="container mt-3>
        <% comments.forEach(comment => { %>
            <div>
                <img src="<%= comment.createdBy.profileImageURL %>" width="100px"/>
                <%= comment.createdBy.fullName %> 
                <pre><%=comment.content%> </pre>
            </div>
        <% })%>
    </div>

    <%- include("./partials/scripts") %>
</body>
</html>